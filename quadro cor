let squareSize;
let lineWidth;
let r, g, b;

function setup() {
  createCanvas(800, 800);
  lineWidth = random(4, 28);
  background(0);

}

function draw() { 
  squareSize = random(5, 100);
  r = random(0, 255);
  g = random(0, 255);
  b = random(0, 255);
  
  strokeWeight(lineWidth);
  stroke(r, g, b, 20);
  fill(r, g, b, 100);
  square(mouseX, mouseY, squareSize);
  
}
  
function mousePressed () {
  background (0);
  
}
